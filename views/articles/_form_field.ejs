<div class="form-group">
    <label for="title">Title</label>
    <input required type="text" value="<%= article.title %>" name="title" id="title" class="form-control">
</div>
<div class="form-group">
    <label for="description">Description</label>
    <textarea required type="description" value="<%= article.description %>" name="description" id="description" class="form-control"></textarea>
</div>
<div class="form-group">
    <label for="markdown">Markdown</label>
    <textarea required type="markdown" value="<%= article.markdown %>" name="markdown" id="markdown" class="form-control"></textarea>
</div>

<button type="submit" class="btn btn-primary mt-4">Save</button>

<a href="/" class="btn btn-secondary mt-4">Cancel</a>